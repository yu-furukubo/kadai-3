<!DOCTYPE html>
<html>
  <head>
    <title>Kadai-3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/02d3b10da1.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column">
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg">
      <div class="container">
        <div class="navbar-barand p-0"><%= link_to 'Bookers', root_path, class: "text-white lead" %></div>
        <!--ログイン時は :Home :Users :Books :Log out-->
        <!--ログアウト時は :Home :About :Sign up :Log in-->
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user.id), class: "nav-link text-white" do %>
              <i class="fas fa-home"></i> Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to users_path, class: "nav-link text-white" do %>
              <i class="fa-solid fa-users"></i> Users
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to books_path, class: "nav-link text-white" do %>
              <i class="fa-solid fa-book-open"></i> Books
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
              <i class="fas fa-sign-out-alt"></i> Log out
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link text-white" do %>
              <i class="fas fa-home"></i> Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to about_path, class: "nav-link text-white" do %>
              <i class="fa-solid fa-link"></i> About
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
              <i class="fa-solid fa-user-plus"></i> Sign up
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link text-white" do %>
              <i class="fas fa-sign-in-alt"></i> Log in
            <% end %>
          </li>
        </ul>
        <% end %>
      </div>
      </nav>
    </header>

    <main>
      <div>
        <%= flash[:notice] %>
      </div>
      <%= yield %>
    </main>

    <footer class="m-4 text-center">
      <p>CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
