<div class="mx-2 mb-2 font-weight-bold">
  <h3>User info</h3>
  <%= image_tag user.get_profile_image(120,120) %>
  <table class="table">
    <tr class="border-top">
      <td>name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= user.introduction %></td>
    </tr>
  </table>
</div>

<%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
<% end %>

<div class="mt-4 mx-2">
<h3>New book</h3>

  <%= form_with model: @book_new, url: '/books', method: :post do |f| %>
  <div class="form-group">
    <div class="my-2">
      <label>Title</label>
      <%= f.text_field :title, class: "w-100" %>
    </div>
    <div class="my-2">
      <label>Opinion</label>
      <%= f.text_area :body, class: "w-100" %>
    </div>
    <%= f.submit 'Create Book', class: "btn btn-md btn-success my-3" %>
  </div>
  <% end %>
</div>