<div class="container">
  <div class="col-md-6 mx-md-auto m-4">
    <h3>User info</h3>

    <% if @user.errors.any? %>
      <%= @user.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <div class="my-3">
          <label>Name</label>
          <%= f.text_field :name, class: "w-100" %>
        </div>
        <div class="my-3">
          <label>Image</label>
          <div>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>
        <div class="my-3">
          <label>Introduction</label>
          <%= f.text_area :introduction, class: "w-100" %>
        </div>
        <%= f.submit 'Update User', class:"btn btn-secondary m-2" %>
      </div>
    <% end %>
  </div>
</div>