<div class="container m-4 mx-md-auto">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/sidebar',user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1 px-3">
      <h3>Users</h3>
      <table class="table">
        <tr class="border-top border-bottom">
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>