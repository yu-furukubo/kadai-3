<div class="container m-4 mx-md-auto">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/sidebar',user: @user %>
    </div>

    <div class="col-md-8 offset-md-1 px-3">
      <h3>Books</h3>
      <table class="table">
        <tr class="border-top border-bottom">
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

        <% @user.books.each do |book| %>
          <tr>
            <td>
            <%= link_to user_path do %>
              <%= image_tag @user.profile_image.variant(resize: '100x100') %>
            <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>