<div class="container m-4 mx-md-auto">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/sidebar',user: @book.user %>
    </div>

    <div class="col-md-8 offset-md-1 px-3">
      <h3>Book detail</h3>

      <table class="table">
        <% if @book.user_id == current_user.id %>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.profile_image.variant(resize: '100x100') %>
              <% end %>
              <p><%= link_to @book.user.name, user_path(current_user.id) %></p>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success"  %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete,"data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
          </tr>
        <% else %>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.profile_image.variant(resize: '100x100') %>
              <% end %>
              <p><%= link_to @book.user.name, user_path(@book.user_id) %></p>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
